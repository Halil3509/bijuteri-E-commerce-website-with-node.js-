<%- include('./partial/introduceheader') -%>

    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Ürün</a></li>
                <li class="breadcrumb-item active">Ürün Listesi</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Product List Start -->
    <div class="product-view">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-md-12">
                            <% if(action === 'success') { %>
                                <div  class="alert alert-success" role="alert"> Sepete Ekleme İşleminiz Başarılı</div>
                                <% } %>
                            <% if(action === 'deleted') { %>
                                <div  class="alert alert-danger" role="alert"> Ürün Sepetten Çıkarıldı</div>
                                <% } %>
                        </div>
                        <% for(var i=0; i<products.length; i++){ %>
                        <div class="col-md-4">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="#"><%= products[i].Baslik %></a>
                                </div>
                                <div class="product-image">
                                    <a href="product-detail.html">
                                        <img src="<%= products[i].ResimUrl %>" alt="Product Image">
                                    </a>

                                </div>
                                <div class="product-price">
                                    <h3 class="mt-3"><%= products[i].Fiyat%> TL</h3>
                                    <form action="/urun/detail" method="post">
                                        <input type="hidden" value="<%= products[i]._id %>" name="productId">
                                        <input type="hidden" value="<%= id %>" name="userId" >
                                        <input type="submit" class="btn ml-2" value="Detaylar">
                                    </form>
                                    <form action="/siparis/addtobasket" method="post" class="mb-5">
                                        <input type="hidden" name="userId" value="<%= id %>">
                                        <input type="hidden" name="productId" value="<%= products[i]._id %>">
                                        <input type="submit" class="btn" value="Sepete Ekle" >
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>

                    <!-- Pagination Start -->
                    <div class="col-md-12">

                    </div>
                    <!-- Pagination Start -->
                </div>

                <!-- Side Bar Start -->
                <div class="col-lg-4 sidebar">
                    <div class="sidebar-widget category">
                        <h2 class="title">Kategori</h2>
                        <nav class="navbar bg-light">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/urun/filter/61cb66e0ee81fff71b6645ff"><i class="fa fa-tshirt"></i>Küpe</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/urun/filter/61cb66bf0df2d4ff1b4619f3"><i class="fa fa-mobile-alt"></i>Kolye</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/urun/filter/61cb66eb3d6d40a51c87fbf6"><i class="fa fa-microchip"></i>Bileklik</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/urun/filter/61cb66f8fb8a1a2d4a23ec0d"><i class="fa fa-microchip"></i>Yüzük</a>
                                </li>
                            </ul>
                        </nav>
                    </div>


                </div>
                <!-- Side Bar End -->
            </div>
        </div>
    </div>
    <!-- Product List End -->



    <%- include('./partial/footer') -%>