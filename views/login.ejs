<%- include('./partial/header') -%>

    <div class="container" style="margin-top: 300px; margin-bottom: 200px;">
        <div class="login-form">
            <% if(action === 'created') { %>
                <div class="alert alert-success" role="alert">
                    Kayıt olma işlemi tamamlandı.
                  </div>
                <% } %>
            <% if(action === 'fault') { %>
                <div class="alert alert-danger" role="alert">
                    E-posta ya da Şifre hatalı
                  </div>
                <% } %>
            <% if(action === 'success') { %>
                <div class="alert alert-success" role="alert">
                    Giriş Yapıldı.
                  </div>
                <% } %>

                <h1 class="mb-5" style="text-align: center; color: blueviolet;"><b>Bujiteri Satış Sitesine Geldiniz</b></h1>
            <div class="row">
                <form action="/login" method="post">
                    <div class="col-md-12">
                        <label>E-mail </label>
                        <input class="form-control" name="Email" type="text" placeholder="E-mail">
                    </div>
                    <div class="col-md-12">
                        <label>Şifre</label>
                        <input class="form-control" name="Sifre" type="password" placeholder="Şifre">
                    </div>

                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary" value="Giriş Yap">
                    </div>
                </form>
            </div>
           <p class="mt-2"> Bir Hesabınız yok mu? <a href="/opensignup">Kayıt Ol</a></p>
           
        </div>
    </div>

    <%- include('./partial/footer') -%>